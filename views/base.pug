doctype html 
html(lang ='en')
  head 
    meta(charset = 'utf-8')
    meta(name='viewport' content='width=device-width' initial-scale='1.0')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='shotcut icon', type='image/png', href='/img/favicon.png')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
    title Haarsans | #{title}
        
  body
    // HEADER
    header.header
      nav.nav.nav--tours
        a.nav__el(href='/') All tours
      .header__logo 
        img(src='/img/logo-green-round.png' alt='Haarsans logo')
      nav.nav.nav--user
        if user
          a.nav__el.nav__el--logout Log out
          a.nav__el(href='/me')
            img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name} photo`)
            span= user.name.split(' ')[0]
        else
          a.nav__el(href='/login') Log in
          a.nav__el.nav__el--cta(href='/signUp') Sign Up

    //- content
    block content
      h1 This is just a placeholder

    //- FOOTER
    footer.footer 
      .footer__logo 
        img(src='/img/logo-green.png' alt='Haarsan logo')
      ul.footer__nav
        li: a(href='#') About Us
        li: a(href='#') Become a guide
        li: a(href='#') Contact
      p.footer__copyright &copy; by Harini Dhanasekaran

      //- script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js')
      script(src='/js/bundle.js')

    